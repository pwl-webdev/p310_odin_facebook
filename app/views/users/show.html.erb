<div class="container">
	<div class="u-pull-left">
		<div class="row">
		  <aside class="col-md-4">
    		<section class="user_info">
				<h4>
					<div>
						<%= gravatar_for @user %>
					</div>
					<div>
						<%= @user.email %>
					</div>
				</h4>
			</section>
		  </aside>
			  <div class="col-md-8">
			        <section class="micropost_form">
       					<%= render 'posts/post_form' %>
      				</section>
			    <% if @user.posts.any? %>
			      <ul class="microposts">
			        <%= render @posts %>
			      </ul>
			    <% end %>
			  </div>
		</div>
	</div>
</div>